<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= pageTitle %>
    </title>
    <link rel="stylesheet" href="./src/styles/common.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="bg-light" style='height: 100vh; display: flex; justify-content: center;align-items: center;'>

    <div class="position-absolute top-0  p-5 z-2 w-100 d-flex justify-content-center align-items-center">
        <div class=" w-50  p-2 d-flex justify-content-center align-items-center" id="alert-box">
            <% if (alertMessage) { %>
                <div class="alert alert-<%= alertType %>" id="alert">
                    <%= alertMessage %>
                </div>
                <% } %>
        </div>
    </div>
    <div class="container p-5 d-flex justify-content-center align-items-center">
        <div class="card w-50">
            <div class="card-body">
                <h1 class="card-title text-center mb-4">
                    <%= pageTitle %>
                </h1>
                <div class=" mb-3">
                    <div class="row">
                        <div class="col">First Name</div>
                        <div class="col text-capitalize">
                            <%= userDetails.firstName %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">Last Name</div>
                        <div class="col text-capitalize">
                            <%= userDetails.lastName %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">UserName</div>
                        <div class="col ">
                            <%= userDetails.userName %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">Email</div>
                        <div class="col ">
                            <%= userDetails.email %>
                        </div>
                    </div>
                </div>
                <div class="mb-3 w-100 d-flex justify-content-center">
                    <button onclick="deleteUser('<%= userDetails._id %>')" class="btn btn-danger w-75">Delete
                        User</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const alertBox = document.getElementById('alert-box')
        setTimeout(() => {
            alertBox.classList = '';
            alertBox.innerHTML = '';
        }, 3000);

        const redirectUrl = "<%= redirectUrl %>";
        if (redirectUrl && redirectUrl.trim() !== "") {
            setTimeout(() => {
                window.location.href = redirectUrl;
            }, 2000)

        }

        function deleteUser(id) {
            fetch(`http://localhost:3000/api/admin/deleteUser/${id}`, {
                method: 'DELETE'
            }).then((response) => {
                if (response.ok) {
                    window.location.href = '/api/admin/'
                }

            }).catch((error) => {
                alert(error.message)
            })
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>