<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title  %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body class="bg-light">

    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid px-5 ">
            <a class="navbar-brand fs-2 text-uppercase"><%= title  %></a>
            <i onclick="logout()" class="fa-solid fa-right-from-bracket fs-2"></i>
        </div>
    </nav>



    <div class="container-fluid  d-flex justify-content-center align-items-center p-4"
        style="min-height: 80vh; max-height: auto;">
        <div class="card w-75 ">
            <div class="card-body ">
                <div class="row  p-4 w-100">
                    <div class="col-8 ">
                        <form class="d-flex" action="/api/admin/search" method="get" role="search">
                            <input class="form-control me-2" name="searchString" type="search" placeholder="Search"
                                aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                    <div class="col-2  d-flex justify-content-center align-items-center">
                        <a href="/api/admin/createUser" class="btn btn-success"> Create User</a>
                    </div>
                    <div class="col-2  d-flex justify-content-center align-items-center">
                        <a href="/api/admin/" class="btn btn-success"><i class="fa-solid fa-arrows-rotate"></i></a>
                    </div>
                </div>
                <div class="mt-3 d-flex justify-content-center">

                    <% if (employeeList.length> 0) { %>
                        <table class="table table-striped table-hover border p-3">
                            <thead>
                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% employeeList.forEach((employee,index)=>{ %>
                                    <tr>
                                        <td>
                                            <%= index+1 %>
                                        </td>
                                        <td class="text-capitalize">
                                            <%= employee.firstName %>
                                        </td>
                                        <td class="text-capitalize">
                                            <a href="/api/admin/editUser/<%= employee._id %>" class="btn btn-info">
                                                <i class="fa-regular fa-pen-to-square"></i>
                                            </a>
                                            <a onclick="deleteUser('<%= employee._id %>')" class="btn btn-danger">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <%})%>
                            </tbody>
                        </table>

                        <%} else {%>
                            <div class="d-flex justify-content-center">
                                <h2>No Employess created to dispaly</h2>
                            </div>
                            <% } %>



                </div>
            </div>
        </div>
    </div>

    <script>
        const alertBox = document.getElementById('alert-box')
        function logout() {
            console.log('working')
            fetch('http://localhost:3000/api/auth/logout', {
                method: 'GET'
            }).then((response) => {
                console.log('working')
                window.location.reload()
            })
        }

        function deleteUser(id) {
            console.log('id',id)
            fetch(`http://localhost:3000/api/admin/deletUser/${id}`, {
                method: 'DELETE'
            }).then((response) => {
                if (response.ok) {
                    window.location.reload()
                }

            }).catch((error) => {
                alert(error.message)
            })
        }

</script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/88f2b93054.js" crossorigin="anonymous"></script>

</body>

</html>