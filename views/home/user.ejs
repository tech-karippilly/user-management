            }).then((response) => {
                console.log('working')
                window.location.reload()
            })
        }

        function deleteUser(id) {
            fetch(`http://localhost:3000/api/admin/deleteUser/${id}`, {
                method: 'DELETE'
            }).then((response) => {
                if (response.ok) {
                    window.location.reload()
                }

            }).catch((error) => {
                alert(error.message)
            })
        }

</script>


